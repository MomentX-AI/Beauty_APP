# Application Configuration
APP_NAME=BeautyAI API
NODE_ENV=development
APP_VERSION=1.0.0
PORT=3000
HOST=localhost

# Database Configuration
DATABASE_TYPE=postgres
DB_HOST=localhost
DB_PORT=5432
DB_NAME=beautyai
DB_USER=postgres
DB_PASSWORD=password
DB_SSLMODE=disable

# MongoDB (if using MongoDB instead of PostgreSQL)
MONGODB_URI=mongodb://localhost:27017/beautyai

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRE=24h
JWT_REFRESH_SECRET=your-refresh-token-secret
JWT_REFRESH_EXPIRE=168h

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# Logging Configuration
LOG_LEVEL=info
LOG_FORMAT=json

# Email Configuration
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your-email@gmail.com
EMAIL_PASSWORD=your-app-password
EMAIL_FROM=noreply@beautyai.com

# File Storage Configuration
STORAGE_TYPE=local
UPLOAD_PATH=./uploads

# Cloudinary Configuration (if using cloud storage)
CLOUDINARY_CLOUD_NAME=your-cloud-name
CLOUDINARY_API_KEY=your-api-key
CLOUDINARY_API_SECRET=your-api-secret

# Server Timeouts
READ_TIMEOUT=15s
WRITE_TIMEOUT=15s
IDLE_TIMEOUT=60s

# API Documentation
SWAGGER_BASE_URL=http://localhost:3000 